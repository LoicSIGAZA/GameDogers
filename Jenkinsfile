pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning repository...'
            }
        }

        stage('Build') {
            steps {
                echo 'Simulating build process (e.g. HTML/CSS/JS validation)'
            }
        }

        stage('Test') {
            steps {
                echo 'Simulating basic test (e.g. JavaScript syntax check)'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying front-end (static files copied to server/public folder)'
            }
        }
    }
}
